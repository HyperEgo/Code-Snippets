<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#e5ffcc" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/dollarSign" android:background="@drawable/bills_wrapped_boarder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <LinearLayout android:orientation="horizontal" android:background="#afcfaf" android:paddingLeft="2dp" android:paddingTop="7dp" android:paddingRight="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btnAdd" android:background="@drawable/click_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_weight="1"/>
        <Button android:id="@+id/btnDelLast" android:background="@drawable/click_del_last" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_weight="1"/>
        <Button android:id="@+id/btnDel" android:background="@drawable/click_del_all" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="#f2eebf" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textColor="#000000" android:layout_gravity="center" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/grand_total"/>
            <TextView android:textColor="#000000" android:layout_gravity="center" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:maxLength="15"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textColor="#000000" android:layout_gravity="center" android:id="@+id/itemCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/item_count"/>
            <TextView android:textColor="#000000" android:layout_gravity="center" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:maxLength="15"/>
        </LinearLayout>
    </LinearLayout>
    <ListView android:id="@+id/listviewz" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:transcriptMode="disabled" android:cacheColorHint="#000000"/>
</LinearLayout>
